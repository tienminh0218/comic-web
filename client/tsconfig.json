{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/commons/*": ["./src/commons/*"],
            "@/app/*": ["./src/app/*"],
            "@/styles/*": ["./src/styles/*"],
            "@/hook/*": ["src/hook/*"],
            "@/hoc/*": ["src/hoc/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/validations/*": ["./src/validations/*"],
            "@/models/*": ["./src/models/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
